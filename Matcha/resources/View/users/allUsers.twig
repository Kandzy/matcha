{% extends 'layout/app.twig' %}

{% block title %}Matcha Users{% endblock %}

{% block content %}
    </br>
    <div style="display: flex; align-content: center; justify-content: center">
        <a href="{{ path_for('user.find') }} "><button>Find User</button></a>
    </div>
    {% for user in data %}
        <div style="background-color: #555555; display: flex; flex-direction: column; text-align: center; margin-top: 2%">
            <div style="display: flex; flex-direction: column; justify-content: center; align-content: center;align-items: center">
                <img style="height: 16vw; width: 14vw;" src="{{ user.Avatar }}">

            </div>
            <div>
                Login: {{ user.Login }}
            </div>
            <div>
                Gender: {{ user.Gender }}
            </div>
            <div>
                Age: {{ user.Age }}
            </div>
            <div>
                Email: {{ user.Email }}
            </div>
            <div>
                First and Last name: {{ user.FirstName }} {{ user.LastName }}
            </div>
            <div>
                Place: {{ user.City }}, {{ user.Country }}
            </div>

            <div>
                Orientation: {{ user.Orientation }}
            </div>
            <div>
                Tags: {{ user.Tags }}
            </div>
            <div>
                Bio: <textarea disabled>{{ user.Bio }}</textarea>
            </div>
            <a href="{{ path_for('profile', {username: user.Login}) }}"><button>View profile</button></a>
        </div>
        {#<h5 style="color: white">{{ user.getAllDataFromUser() }}</h5>#}
    {% endfor %}
{% endblock %}